{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES6",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist/",
      "sourceMap": true,
      "jsx": "react",
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true
    },
    "typeRoots" : ["./typings", "./node_modules/@types"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
